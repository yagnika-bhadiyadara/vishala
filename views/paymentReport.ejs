      <table class="table table-borderless mt-3">
        <thead>
          <tr>
            <th>No</th>
            <th>Date</th>
            <th>Name</th>
            <th>Contact No.</th>
            <th>Advance Payment</th>
            <th>Due Payment</th>
            <th>Payment</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% for(var i=0;i < data.length;i++){ %>
                <td>
                  <%= i+1 %>
                </td>
                <td>
                  <%= moment(data[i].date).format('DD-MM-YYYY') %>
                </td>
                <td>
                  <%= data[i].username %>
                </td>
                <td>
                  <%= data[i].phonenumber %>
                </td>
                <td>
                  <%= data[i].advance_payment %>
                </td>
                <td>
                  <%= data[i].due_payment %>
                </td>
                <td>
                  <a href="/paymentReport?id=<%= data[i]._id %>"><button class="button">Done</button></a>
                </td>
          </tr>
          <tr>
            <% } %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

